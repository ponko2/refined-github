{
  "name": "refined-github",
  "version": "0.1.0",
  "private": true,
  "description": "Simplifies the GitHub interface and adds useful features",
  "type": "module",
  "scripts": {
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "postinstall": "wxt prepare",
    "fix": "run-p --aggregate-output -c -l fix:*",
    "fix:oxfmt": "oxfmt",
    "fix:oxlint": "oxlint --deny-warnings --fix --type-aware --type-check",
    "lint": "run-p --aggregate-output -c -l lint:*",
    "lint:oxfmt": "oxfmt --check",
    "lint:oxlint": "oxlint --deny-warnings --type-aware --type-check",
    "setup": "corepack enable pnpm",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox"
  },
  "devDependencies": {
    "@commitlint/cli": "20.4.1",
    "@commitlint/config-conventional": "20.4.1",
    "@tsconfig/strictest": "2.0.8",
    "lefthook": "2.1.1",
    "npm-run-all2": "8.0.4",
    "oxfmt": "0.33.0",
    "oxlint": "1.48.0",
    "oxlint-tsgolint": "0.14.1",
    "typescript": "5.9.3",
    "wxt": "0.20.17"
  },
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": "^24.11.1",
      "onFail": "download"
    }
  },
  "packageManager": "pnpm@10.30.0"
}
